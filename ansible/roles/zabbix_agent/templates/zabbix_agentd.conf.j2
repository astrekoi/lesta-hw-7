# Сгенерировано Ansible - НЕ РЕДАКТИРОВАТЬ ВРУЧНУЮ!

# Logging (согласно search results[5])
LogFile=/var/log/zabbix/zabbix_agentd.log
LogFileSize=10

# PID file
PidFile=/var/run/zabbix/zabbix_agentd.pid

# Настройки подключения
Server={{ zabbix_server_ip }}
ServerActive={{ zabbix_server_ip }}
Hostname={{ ansible_hostname }}

# AUTOREGISTRATION METADATA для автоматического добавления
HostMetadata=Linux Server Web {{ ansible_hostname }}

# Настройки агента
StartAgents=5
RefreshActiveChecks=120
BufferSend=5
BufferSize=100
MaxLinesPerSecond=20
Timeout=30

# SECURITY настройки
AllowRoot=0
DenyKey=system.run[*]
EnableRemoteCommands=0
LogRemoteCommands=1

# User parameters включение
Include=/etc/zabbix/zabbix_agentd.conf.d/*.conf
UnsafeUserParameters=0
